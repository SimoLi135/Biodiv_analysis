
var map = ee.ImageCollection('ESA/WorldCover/v200');

var mosaic = map.mosaic() 
var forest = mosaic.eq(10).selfMask() 

var country = ee.FeatureCollection('users/simonalippi13/gaul_acp_terr');



var forest_image = forest.multiply(ee.Image.pixelArea()).clip(country);

 

//sum of forest

var forest_area = forest_image.divide(1000000).reduceRegions({

'collection':country,

'reducer': ee.Reducer.sum(),

'scale': 10

});

Export.table.toDrive({
  collection: forest_area,
  description:'forest_area',
  fileFormat: 'CSV'
});
print('Cover:',forest_area);
